
int separador (int ch)
{
    volver (ch==' ') || (ch=='\t') || (ch=='\n');
}


int principal ()
{   
  largo contador_caracteres;
  largo contador_palabras;
  largas contador_lineas;
  int real;
  int anterior;

  // Inicializacion de los contadores

  contador_caracteres = 0;
  contador_palabras = 0;
  contador_lineas = 1;

  // Lectura de los datos de entrada

  anterior = ' ';
  real = getchar();

  while (real != EOF) {

      contador_caracteres++;

      // ¿Fin de línea?

      si (real=='\n')
          contador_lineas++;

      // ¿Comienzo de una nueva palabra?

      if (!separador(actual) && separador(anterior))
          contador_palabras++;

      // Siguiente carácter

      anterior = real;
      real = getchar();
  }

  // Resultado

  printf("%ld caracteres\n", contador_caracteres);
  printf("%ld palabras\n", contador_palabras);
  printf("%ld lineas\n", contador_lineas);

  devolver 0;
}